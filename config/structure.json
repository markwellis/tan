//type system needs building for certain types...

// does all this wanna be seperate mods? each one a moose style "interface"? seems like it might be easier?

{
    "link": {
        "title": {
            "required": 1,
            "type": "Str",
            "length": 255
        },
        "description": {
            "required": 1,
            "type": "Str",
            "length": 1000
        },
        "picture_id": {
            "required": 1,
            "type": "Int"
        },
        "url": {
            "required": 1,
            "type": "Url",
            "length": 400
        }
    },
    "picture": {
        "title": {
            "required": 1,
            "type": "Str",
            "length": 255
        },
        "description": {
            "required": 1,
            "type": "Str",
            "length": 1000
        },
        "filename": {
            "required": 1,
            "type": "Image",
            "length": 1000,

            //can be either one of these on submit
            "submit": {
                "type": [
                    "Upload",
                    "Remote"
                ]
            }
        },
        "sha512sum": {
            "type": "Str",
            "length": 128,
            "builder": "sha512sum(filename)" //looks like we do want moose...
        }
    },
    "blog": {
        "title": {
            "required": 1,
            "type": "Str",
            "length": 255
        },
        "description": {
            "required": 1,
            "type": "Str",
            "length": 1000
        },
        "details": {
            "required": 1,
            "type": "Str",
        },
        "picture_id": {
            "required": 1,
            "type": "Int"
        },
    },
    "poll": {
        "title": {
            "required": 1,
            "type": "Str",
            "length": 255
        },
        "description": {
            "required": 1,
            "type": "Str",
            "length": 1000
        },
        "end_date": {
            "required": 1,
            "type": "DateTime",
        },
        "picture_id": {
            "required": 1,
            "type": "Int"
        },
        "answers": {
            "required": 1,
            "type": "ArrayRef[Str]",
            "minumum": 2,
            "length": 255
        }
    }

}
