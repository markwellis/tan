[% PROCESS lib/cms_menu.tt %]
<form class="TAN-menu-top-search" action="/search/" method="get">
    <fieldset>
        <input
            type="text" 
            size="31" 
            name="q" 
            value="[% c.req.param('q') %]"
        />
        <input type="submit" value="Search" />
    </fieldset>
