{
    "name": "TAN",
    "default_view": "Perl",
    "encoding": "UTF-8",

    "google_adcode": "pub-2707046014408987",

    "using_frontend_proxy": 1,

    "static_path": "/static",
    "avatar_path": "/static/user/avatar",
    "pic_path": "/static/user/pics",

    "cache_path": "/static/cache",
    "csscache_path": "/static/cache/css",
    "jscache_path": "/static/cache/js",
    "thumb_path": "/static/cache/thumbs",

    "recent_comments": 20,
    "promotion_cutoff": 10,

    "recaptcha_public_key": "6LfOtQIAAAAAAKjR5kiq9YLFjG80_bLST2fB696F",
    "recaptcha_private_key": "6LfOtQIAAAAAAK0DnRYVGRWVP0aBtfG158_OYGok",

    "email": ["Sendmail"],

    "Plugin::Authentication": {
        "use_session": 1,
        "default": {
            "credential": {
                "class": "Password",
                "password_type": "hashed",
                "password_hash_type": "SHA-512"
            },
            "store": {
                "class": "DBIx::Class",
                "user_model": "MySQL::User",
                "use_userdata_from_session": 1
            }
        }
    },

    "Plugin::Cache": {
        "backend": {
            "class": "Cache::Memcached::libmemcached",
            "debug": 2,
            "servers": [
                "127.0.0.1:11211"
            ]
        }
    },

    "Plugin::Session": {
        "expires": 1209600,
        "storage": "/tmp/tan_session_cache"
    },

    "Model::FetchImage": {
        "args" : {
            "max_filesize": 3145728,
            "user_agent": "Mozilla/5.0 (Windows; U; Windows NT 5.1; en-US; rv:1.9.0.16) Gecko/2009120208 Firefox/3.0.16 (.NET CLR 3.5.30729)"
        }
    },

    "Model::Search": {
        "args" : {
            "index_path": "/mnt/stuff/TAN/search_index",
            "schema": [
                {
                    "name": "title", 
                    "boost": 3,
                },{
                    "name": "description",
                },{
                    "name": "id",
                },{
                    "name": "type",
                },{
                    "name": "nsfw",
                }
            ],
            "search_fields": ["title", "description"],
            "search_boolop": "AND",
            "entries_per_page": 27
        }
    }
}
